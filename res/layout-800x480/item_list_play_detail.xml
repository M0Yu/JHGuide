<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <RelativeLayout
        android:id="@+id/storeImageRelativeLayout"
        android:layout_width="90dp"
        android:layout_height="83dp"
        android:background="@drawable/image_border" >

        <ProgressBar
            android:id="@+id/storeImageProgressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/storeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        
        android:layout_gravity="center_vertical"
        
        android:layout_marginLeft="92dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/storeDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="20.8696dp"      
        android:gravity="left"
        android:lines="2"       
        android:ellipsize="end"
        android:text="TextView"
        android:textSize="10dp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        style="@style/myratingbar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/storeDescription"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="65dp"
        android:indeterminate="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:soundEffectsEnabled="true"
        android:clickable="false"
        android:focusable="false"/>

    <LinearLayout
        android:id="@+id/pointcollectcommentLinearlayout"
        android:layout_width="108.5217dp"
        android:layout_height="38.2609dp"
        android:layout_alignBottom="@+id/storeImageRelativeLayout"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6.5dp"
        android:layout_toRightOf="@+id/ratingBar1" >

        <FrameLayout
            android:id="@+id/pointFrameLayout"
            android:layout_width="36.4dp"
            android:layout_height="45.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6.5dp"
            
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/pointLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/pointButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/point_button_before"
                    android:focusable="false" 
                    android:clickable="false"/>

                <TextView
                    android:id="@+id/pointTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="34.7826dp"
                    android:maxLines="1"
                    android:text="点赞"
                    android:textSize="12.5217dp" />
            </LinearLayout>

            <View
                android:id="@+id/pointButtonView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1.3dp"
                android:layout_marginRight="1.3dp"
                android:layout_marginTop="2.6dp"
                android:background="#00000000"
                android:focusable="false"
                android:clickable="false" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/collectFrameLayout"
            android:layout_width="35dp"
            android:layout_height="45.5dp"
            android:layout_marginLeft="4.5dp"
            >

            <LinearLayout
                android:id="@+id/collectButtonLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3.9dp"
                android:layout_marginTop="1.3dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/collectButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/collect_button_before"
                    android:focusable="false"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/collectTextview"
                    android:layout_width="30dp"
                    android:layout_height="29.9dp"
                    android:layout_marginBottom="6.5dp"
                    android:layout_marginLeft="3.9dp"
                    android:maxLines="1"
                    android:text="收藏"
                    android:textSize="12.5217dp" />
            </LinearLayout>

            <View
                android:id="@+id/collectButtonView"
                android:layout_width="44.5217dp"
                android:layout_height="35.1dp"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="9.1dp"
                android:background="#00000000"
                android:focusable="false"
                android:clickable="false" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/commentFramelayout"
            android:layout_width="36dp"
            android:layout_height="45.5dp"
            android:layout_marginLeft="6.5dp"
            android:layout_weight="0.57" >

            <LinearLayout
                android:id="@+id/commentButtonLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/commentButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/comments_button"
                    android:focusable="false"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/commentTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="29.9dp"
                    android:maxLines="1"
                    android:text="评论"
                    android:textSize="12.5217dp" />
            </LinearLayout>

            <View
                android:id="@+id/commentButtonView"
                android:layout_width="wrap_content"
                android:layout_height="58.5dp"
                android:layout_marginLeft="1.3dp"
                android:layout_marginRight="1.3dp"
                android:layout_marginTop="7.8dp"
                android:background="#00000000" 
                android:focusable="false"
                android:clickable="false"/>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>