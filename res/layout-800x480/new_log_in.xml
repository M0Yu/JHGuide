<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="38.9333dp"
        android:background="@drawable/navegation_bar"
        android:gravity="left" >

        <TextView
            android:id="@+id/log_in1_textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffc72a"
            android:textSize="18.3333dp" />

        <Button
            android:id="@+id/log_in1_button1"
            android:layout_width="16.5333dp"
            android:layout_height="15.4667dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6.4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/return1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46.4dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/log_in1_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/photo_03" />

    </RelativeLayout>

    <EditText
        android:id="@+id/log_in1_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46.9333dp"
        android:layout_marginRight="46.9333dp"
        android:layout_marginTop="51.7333dp"
        android:ems="10"
        android:textSize="19.3333dp"
        android:hint="账号"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/log_in1_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46.9333dp"
        android:layout_marginRight="46.9333dp"
        android:layout_marginTop="6.9333dp"
        android:ems="10"
        android:textSize="18.3333dp"
        android:hint="密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/log_in1_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.5333dp"
        android:layout_gravity="center"
        android:background="@drawable/entry"
        android:layout_marginLeft="46.9333dp"
        android:layout_marginRight="46.9333dp"
        android:textColor="#fdfdfd"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/log_in1_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="81.0667dp"
            android:textColor="#b3b3b3"
            android:textSize="13.3333dp"
            android:text="没有账号" />

        <Button
            android:id="@+id/log_in1_button3"
            android:layout_width="wrap_content"
            android:layout_height="24.5333dp"
            android:background="#ffffff"
            android:text="点击并注册"
            android:textColor="#ecaa00"
            android:textSize="13.3333dp" />

        <TextView
            android:id="@+id/log_in1_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b3b3b3"
            android:textSize="13.3333dp"
            android:text="登录吧" />

    </LinearLayout>
    
    
</LinearLayout>