<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="405dp"
        android:layout_weight="3"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

    <!--
         <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginLeft="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/wire" />
    -->

    <LinearLayout
        android:id="@+id/mylayout"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layut1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/tab_life_before_21" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="玩转生活" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layut2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/tab_map_before_22" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="地图" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layut3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/tab_news_before_22" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="校园信息" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layut4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/tab_picture_before_22" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="那些年" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layut5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/tab_more_before_22" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="更多" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>