<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e5e5e5" >

    <LinearLayout
        android:id="@+id/near1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="322.1333dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/myLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lw_more_mylibrary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15sp"
                android:gravity="center_horizontal"
                android:text="我的图书"
                android:textColor="#646464"
                android:textSize="12.8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/myClassTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lw_more_mytimetable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15sp"
                android:text="我的课表"
                android:textColor="#646464"
                android:textSize="12.8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/myComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lw_more_mycomingmore" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15sp"
                android:text="即将到来"
                android:textColor="#646464"
                android:textSize="12.8dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>