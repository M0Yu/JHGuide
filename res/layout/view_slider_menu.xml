<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/side_background_03" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/right_menu_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68.8000dp"
            android:background="@drawable/side_head_03" />

        <LinearLayout 
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_menu_btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/right_menu_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_slider_menu_button01" />

                <TextView
                    android:layout_marginTop="-20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_silder_menu01"
                    android:textColor="#ffffff"
                    android:textSize="12.8dp" />
            </LinearLayout>

            <LinearLayout
           
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/right_menu_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_slider_menu_button02" />

                <TextView
                    android:layout_marginTop="-20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_silder_menu02"
                    android:textColor="#ffffff"
                    android:textSize="12.8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/right_menu_btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_slider_menu_button03"
                     />

                <TextView
                      android:layout_marginTop="-20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_silder_menu03"
                    android:textColor="#ffffff" 
                    android:textSize="12.8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"        
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38.4dp"
            android:orientation="horizontal" 
            android:layout_below="@+id/linearLayout1" 
          
            >
            
             <LinearLayout
               android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/myMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_slider_menu_mymessages" />

            <TextView
                android:layout_marginTop="-20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lw_view_silder_myMessages"
                android:textColor="#ffffff"
                android:textSize="12.8dp" />
        </LinearLayout>
            
            
            
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"              
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/right_menu_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_slider_menu_button04" />

            <TextView
                android:layout_marginTop="-20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_silder_menu04"
                android:textColor="#ffffff"
                android:textSize="12.8dp" />
        </LinearLayout>
          <LinearLayout
               android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
         </LinearLayout>
        
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>