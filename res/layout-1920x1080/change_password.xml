<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="@drawable/navegation_bar"
        android:gravity="left" >

        <TextView
            android:id="@+id/l43_textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#ffc72a"
            android:textSize="20.4dp" />

        <Button
            android:id="@+id/l43_button1"
            android:layout_width="24dp"
            android:layout_height="22.8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/l43_textView6"
            android:layout_marginLeft="9dp"
            android:background="@drawable/return1" />

        <Button
            
            android:layout_width="24dp"
            android:layout_height="22.8dp"
            android:layout_alignBottom="@+id/l43_button1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/l43_textView6"
            android:layout_marginRight="9dp"
            android:background="@drawable/confirm" />

        <TextView
            android:id="@+id/l43_button2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/l43_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="71.4dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:ems="10"
        android:hint="请输入原密码"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/l43_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:hint="请输入新密码"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/l43_editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:hint="请确认原密码"
        android:ems="10"
        android:inputType="textPassword" />
    

</LinearLayout>
