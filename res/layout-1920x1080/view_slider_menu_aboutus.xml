<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginTop="22.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22.5dp"
        android:text="@string/aboutUs_information"
        android:textColor="#b7b7b7" 
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5.625dp"
        android:text="@string/aboutUs_edition"
        android:textColor="#707070"
        android:textSize="18dp" />
 -

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="33dp"
        android:paddingRight="33dp"
        android:paddingTop="11.25dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_Myedition"
            android:textColor="#7e7e7e"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.625dp"
            android:text="@string/aboutUs_technical_support"
             android:textColor="#7e7e7e"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.625dp"
            android:text="@string/aboutUs_technical_teachers"
            android:textColor="#7e7e7e"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.625dp"
            android:lineSpacingExtra="5.625dp"
            android:text="@string/aboutUs_code_team"
            android:textColor="#7e7e7e"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:lineSpacingExtra="5.625dp"
            android:text="@string/aboutUs_UI_team"
            android:textColor="#7e7e7e"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>