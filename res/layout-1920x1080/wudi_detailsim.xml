<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#efeff4"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/userNameRatingbarRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="pdgck070"
                android:textColor="#646464"
                android:textSize="18.000sp" />

            <RatingBar
                android:id="@+id/userRatingbar"
                style="@style/myratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="258.75dp"
                android:layout_marginTop="5.625dp"
                android:isIndicator="true"
                android:numStars="5" />

        </RelativeLayout>

        <TextView
            android:id="@+id/userComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:textSize="16.8000sp"
            android:text="@string/commentExample" />
    </LinearLayout>

</RelativeLayout>