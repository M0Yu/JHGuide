<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical"
    tools:context="com.example.jianghan.StoreDetailActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navegation" >

        <Button
            android:id="@+id/sundriesDetailback"
            android:layout_width="21.3333dp"
            android:layout_height="20.2667dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14.933dp"
            android:background="@drawable/return1" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="物品详情"
            android:textColor="#ffc72a"
            android:textSize="18.133sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="15dp"
        android:background="@drawable/huangbolun_shape"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/sundriesName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#363636"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/sundriesImage"
            android:layout_width="301dp"
            android:layout_height="230dp"
            android:src="@drawable/huangbolun_empty_photo" />

        <TextView
            android:id="@+id/sundriesType"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textColor="#FFC72A"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sundries_detail"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:text="TextView"
           android:ellipsize="end"
             android:maxLines="3" 
             android:singleLine="false" 
            android:textColor="#959595" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="100px"
        android:layout_weight="0.03"
        android:background="@drawable/huangbolun_under_17"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tel_type"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textColor="#323232"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/telphone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="TextView"
            android:textColor="#323232"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>