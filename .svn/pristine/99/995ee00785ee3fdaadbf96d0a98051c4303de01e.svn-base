<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
    android:background="@drawable/infos" 
    >

    <TextView 
     android:id="@+id/LifeInfoTxt2"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:textSize="16.0000sp" 
     android:layout_marginTop="10.6667dip"
     android:layout_marginLeft="10.6667dip"
     android:layout_marginRight="10.6667dip"
     android:singleLine="true"
     android:typeface="sans"
     android:gravity="left"  
        />
    <TextView 
     android:id="@+id/LifeInfoTxt3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="16.0000sp"
     android:layout_alignParentRight="true"
     android:layout_marginRight="10.6667dip"
     android:layout_below="@id/LifeInfoTxt2"
     android:singleLine="true"
     android:layout_marginTop="10.6667dip"  
     android:layout_marginBottom="10.6667dip"
     android:gravity="right" 
     android:typeface="sans"
        />
</RelativeLayout>